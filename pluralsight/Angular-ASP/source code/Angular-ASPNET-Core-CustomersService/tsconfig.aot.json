{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "removeComments": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },

  "exclude": [
    "./wwwroot/lib",
    "./node_modules"
  ],

  "angularCompilerOptions": {
   "genDir": "./wwwroot/aot",
   "entryModule": "./wwwroot/app/app.module#AppModule"
 }
}